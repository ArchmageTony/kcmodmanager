{
  "name": "kcmodmanager",
  "version": "0.0.2",
  "description": "A tool to manage Mods package of Kancolle",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "electron . --debug-brk=9223",
    "build": "electron-builder",
    "build-both": "electron-builder -mw"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xiaozhikang0916/kcmodmanager.git"
  },
  "author": "xiaozhikang0916",
  "bugs": {
    "url": "https://github.com/xiaozhikang0916/kcmodmanager/issues"
  },
  "homepage": "https://github.com/xiaozhikang0916/kcmodmanager#readme",
  "license": "MIT",
  "dependencies": {
    "jszip": "^3.1.5",
    "marked": "^0.5.0"
  },
  "devDependencies": {
    "electron": "^2.0.8",
    "electron-builder": "^20.28.4"
  },
  "build": {
    "productName": "KCModManager",
    "appId": "org.xzk.kcmodmanager",
    "asar": false,
    "directories": {
      "output": "release-builds"
    },
    "mac": {
      "files": ["!modconfig.json", "!instruction/*", "!release-builds", "!readme*", "!.vscode/*"]
    },
    "win": {
      "files": ["!modconfig.json", "!instruction/*", "!release-builds", "!readme*", "!.vscode/*"]
    }
  }
}